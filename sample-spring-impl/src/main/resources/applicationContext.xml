<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context = "http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
               http://www.springframework.org/schema/context
   				http://www.springframework.org/schema/context/spring-context-3.0.xsd">
   				
   	<context:annotation-config/>
   	<context:component-scan base-package="com.revature"/>
   	
   	<bean id="userMgr" class="com.revature.manager.UserManagerImpl" 
   			init-method="load" destroy-method="destroy">
   		<property name="user" ref="user1"></property>
   		<property name="userDao" ref="userDao"></property>
   		<!-- <constructor-arg type="String" value="Sales"></constructor-arg> -->
   		<!--  <property name="role" value="Admin"></property> -->
   		
   	</bean>
   	
   	<bean id="user1" class="com.revature.model.User">
   		<property name="name" value="Mike"/>
   	</bean>
   	
   	<bean id="userDao" class="com.revature.dao.UserDaoImpl"></bean>
   	
</beans>